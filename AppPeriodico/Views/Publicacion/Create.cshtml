@model AppPeriodico.Models.Publicacion

@{
    ViewBag.Title = "Create";
}

    <html>
    <body>
        <style>
            #Encabezado {
                color: black;
                padding: 20px;
                text-align: center;
                font-family: 'Juice ITC';
                font-size: 400%;
            }
        </style>
        <h1 id="Encabezado"><b>Crea una Nueva Publicación</b></h1>
    </body>
    </html>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal text-center">
    <h4></h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(model => model.NombrePublicacion, htmlAttributes: new { @class = "control-label col-md-5" })
        <div class="col-md-5">
            @Html.EditorFor(model => model.NombrePublicacion, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.NombrePublicacion, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group text-center">
        @Html.LabelFor(model => model.FechaPublicacion, htmlAttributes: new { @class = "control-label col-md-5" })
        <div class="col-md-5">
            @Html.EditorFor(model => model.FechaPublicacion, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.FechaPublicacion, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group text-center">
        @Html.LabelFor(model => model.Descripcion, htmlAttributes: new { @class = "control-label col-md-5" })
        <div class="col-md-5">
            @Html.EditorFor(model => model.Descripcion, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Descripcion, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group text-center">
        @Html.LabelFor(model => model.idCategoria, htmlAttributes: new { @class = "control-label col-md-5" })
        <div class="col-md-5">
            @Html.DropDownList("idCategoria", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.idCategoria, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group text-center">
        @Html.LabelFor(model => model.idTipoPublicacion, htmlAttributes: new { @class = "control-label col-md-5" })
        <div class="col-md-5">
            @Html.DropDownList("idTipoPublicacion", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.idTipoPublicacion, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group text-center">
        @Html.LabelFor(model => model.idUsuario, htmlAttributes: new { @class = "control-label col-md-5" })
        <div class="col-md-5">
            @Html.DropDownList("idUsuario", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.idUsuario, "", new { @class = "text-danger" })
        </div>
    </div>


    <div class="form-group text-center">
        @Html.LabelFor(model => model.estatus, htmlAttributes: new { @class = "control-label col-md-5" })
        <div class="col-md-5">
            <div class="checkbox">
                @Html.EditorFor(model => model.estatus)
                @Html.ValidationMessageFor(model => model.estatus, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>

    <div class="form-group text-center">
        <div class="col-md-offset-2 col-md-5">
            <input type="submit" value="Crear" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    <input type="button" value="Regresar" class="btn btn-default" onclick="location.href='@Url.Action("Index", "Home")'">
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
