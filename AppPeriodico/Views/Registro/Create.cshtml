@model AppPeriodico.Models.Registro

@{
    ViewBag.Title = "Create";
}

<h2></h2>
<html>
<body>
    <style>
        #Encabezado {
            color: black;
            padding: 20px;
            text-align: center;
            font-family: 'Juice ITC';
            font-size: 400%;
        }
    </style>
    <h1 id="Encabezado"><b>Crea un Nuevo Registro</b></h1>
</body>
</html>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal text-center">
        <h4></h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.FechaRegistro, htmlAttributes: new { @class = "control-label col-md-5" })
            <div class="col-md-5">
                @Html.EditorFor(model => model.FechaRegistro, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.FechaRegistro, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group text-center">
            @Html.LabelFor(model => model.Observaciones, htmlAttributes: new { @class = "control-label col-md-5" })
            <div class="col-md-5">
                @Html.EditorFor(model => model.Observaciones, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Observaciones, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group text-center">
            @Html.LabelFor(model => model.idUsuario, htmlAttributes: new { @class = "control-label col-md-5" })
            <div class="col-md-5">
                @Html.DropDownList("idUsuario", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.idUsuario, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group text-center">
            @Html.LabelFor(model => model.idPublicacion, htmlAttributes: new { @class = "control-label col-md-5" })
            <div class="col-md-5">
                @Html.DropDownList("idPublicacion", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.idPublicacion, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group text-center">
            @Html.LabelFor(model => model.estatus, htmlAttributes: new { @class = "control-label col-md-5" })
            <div class="col-md-5">
                <div class="checkbox">
                    @Html.EditorFor(model => model.estatus)
                    @Html.ValidationMessageFor(model => model.estatus, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group text-center">
            <div class="col-md-offset-2 col-md-5">
                <input type="submit" value="Crear" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>

    <input type="button" value="Regresar al Índice" class="btn btn-default" onclick="location.href='@Url.Action("Index" ,"Registro")'">

</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
